<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.midnightsun.ui.ChatActivity"
    android:background="#e0e0e0">
    <android.support.v7.widget.Toolbar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:contentInsetStart="0dp">
       <android.support.constraint.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ImageButton
               android:id="@+id/back_button"
               android:layout_width="@dimen/icon_size"
               android:layout_height="@dimen/icon_size"
               android:background="@drawable/back"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="@dimen/activity_horizontal_margin"/>
           <ImageButton
               android:id="@+id/menu_button"
               android:layout_width="@dimen/icon_size"
               android:layout_height="@dimen/icon_size"
               android:background="@drawable/menu"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
           <TextView
               android:id="@+id/chat_title"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:textColor="#ffffff"
               android:textSize="20dp"
               android:gravity="center_vertical"
               android:text="girl0"
               app:layout_constraintStart_toEndOf="@id/back_button"
               android:layout_marginStart="20dp"/>
       </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:layout_constraintBottom_toTopOf="@id/select_area"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp">
    </android.support.v7.widget.RecyclerView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/select_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        android:background="#ededed">
        <EditText
            android:id="@+id/edit_query"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:enabled="false"
            android:hint="@string/app_name"
            android:textSize="15dp"
            android:background="#ffffff"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/send_btn"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:paddingStart="10dp"
            android:maxLength="50"/>
        <Button
            android:id="@+id/send_btn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="@id/edit_query"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="发送"
            android:textSize="12dp"/>
        <android.support.constraint.Guideline
            android:id="@+id/gap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>
        <TextView
            android:id="@+id/selection_one"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="12dp"
            android:text="我相信你"
            app:layout_constraintTop_toBottomOf="@id/edit_query"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gap"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:background="@drawable/round_corner"/>
        <TextView
            android:id="@+id/selection_two"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="12dp"
            android:gravity="center"
            android:text="真的吗？我可不信"
            app:layout_constraintTop_toBottomOf="@id/edit_query"
            app:layout_constraintStart_toEndOf="@id/gap"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="5dp"
            android:visibility="gone"
            android:background="@drawable/round_corner"
            android:layout_marginTop="10dp"/>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
