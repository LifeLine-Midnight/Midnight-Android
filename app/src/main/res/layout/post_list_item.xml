<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingEnd="10dp"
    android:background="#ffffff">
    <ImageView
        android:id="@+id/post_item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"/>
    <TextView
        android:id="@+id/post_item_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:fontFamily="monospace"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000faf"
        android:text="@string/app_name"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/post_item_image"
        app:layout_constraintTop_toTopOf="@id/post_item_image"
        android:layout_marginStart="@dimen/activity_horizontal_margin"/>
    <TextView
        android:id="@+id/post_item_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="#1a1a1a"
        android:text="不知道写些啥，就这样吧, 只是一个小测试"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@id/post_item_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_item_name" />
    <ImageView
        android:id="@+id/post_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/post1"
        app:layout_constraintTop_toBottomOf="@id/post_item_msg"
        app:layout_constraintStart_toStartOf="@id/post_item_msg"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/post_date"
        android:textSize="13dp"
        android:textColor="#7f7f7f"
        android:text="1分钟前"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/post_image"
        app:layout_constraintStart_toStartOf="@id/post_image"
        android:layout_marginTop="10dp"/>
</android.support.constraint.ConstraintLayout>